# Uncomment this line to define a global platform for your project
platform :ios, '15.0'
# Ensure base64 wrapper from tools/bin is first in PATH so CocoaPods uses it during pod prepare scripts on macOS
ENV['PATH'] = File.expand_path(File.join('..', 'tools', 'bin'), __FILE__) + ':' + ENV['PATH']


# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

source 'https://cdn.cocoapods.org/'

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

pre_install do |installer|
  installer.pod_targets.each do |pod|
    pod.specs.each do |s|
      if s.name == 'BoringSSL-GRPC' || (s.respond_to?(:root_name) && s.root_name == 'BoringSSL-GRPC') || s.name.include?('BoringSSL-GRPC')
        begin
          if s.respond_to?(:prepare_command=)
            s.prepare_command = nil
          else
            s.instance_variable_set(:@prepare_command, nil) if s.instance_variable_defined?(:@prepare_command)
          end
        rescue => e
          puts "Warning: failed to disable prepare_command for #{s.name}: #{e}"
        end
      end
    end
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Fix deployment target for all pods to match platform version
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end

  require 'fileutils'
  # Copy repo-provided BoringSSL support files into Pods if needed
  support_dir = File.expand_path(File.join('..', 'tools', 'boringssl_support'), __FILE__)
  if File.directory?(support_dir)
    Dir.glob(File.join(installer.sandbox.root, 'BoringSSL-GRPC', '*')).each do |pod_path|
      dst_include_dir = File.join(pod_path, 'src', 'include', 'openssl')
      FileUtils.mkdir_p(dst_include_dir)
      if File.exist?(File.join(support_dir, 'boringssl_prefix_symbols.h'))
        FileUtils.cp(File.join(support_dir, 'boringssl_prefix_symbols.h'), File.join(dst_include_dir, 'boringssl_prefix_symbols.h'))
      end
      if File.exist?(File.join(support_dir, 'PrivacyInfo.xcprivacy'))
        FileUtils.cp(File.join(support_dir, 'PrivacyInfo.xcprivacy'), File.join(pod_path, 'src', 'PrivacyInfo.xcprivacy'))
      end
    end
  end
end
